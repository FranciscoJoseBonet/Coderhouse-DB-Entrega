<h1>Cart Details</h1>

{{#if cart}}
	{{#if cart.products.length}}
		<ul id="cartList" data-cart-id="{{cart._id}}">
			{{#each cart.products}}
				{{#if product}}
					<li data-product-id="{{product._id}}">
						<div class="title">{{product.title}}</div>
						<div class="meta">ID: {{product._id}} | Code: {{product.code}}</div>
						<div class="price">Price: ${{product.price}}</div>
						<div>Quantity: {{quantity}}</div>
						<div>Subtotal: ${{multiply product.price quantity}}</div>

						<div class="actions" style="gap: 10px;">
							<button class="btn-update" style="color: #fff; background: #1279ff">Update
								Product</button>
							<button class="btn-delete" style="color: #fff; background: #ff1212">Delete
								Product</button>
						</div>
					</li>
				{{/if}}
			{{/each}}
		</ul>
		<h2 class="total">Total: ${{total}}</h2>
	{{else}}
		<p class="empty-cart">Carrito vac√≠o</p>
	{{/if}}

	<p>Status: <strong>{{cart.status}}</strong></p>
	<p>Created: {{cart.createdAt}}</p>
	<p>Updated: {{cart.updatedAt}}</p>

{{else}}
	<p>No cart found.</p>
{{/if}}

<p><a href="/api/carts/cart-view" class="back-link">Go Back to Carts</a></p>

<link rel="stylesheet" href="/css/cart.css" />
<script src="/js/cart.js" defer></script>