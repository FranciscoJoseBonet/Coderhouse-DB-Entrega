<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>Cart Details</title>
		<style>
			body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background:
			#f0f2f5; color: #333; margin: 0; padding: 20px; } h1, h2 { text-align: center;
			color: #2c3e50; margin-bottom: 20px; } section { background: #ffffff; padding: 25px;
			margin-bottom: 25px; border-radius: 12px; box-shadow: 0 6px 15px rgba(0, 0, 0,
			0.08); transition: transform 0.2s, box-shadow 0.2s; } section:hover { box-shadow: 0
			10px 20px rgba(0, 0, 0, 0.12); } ul#cartList { list-style: none; padding: 0; margin:
			0; display: grid; grid-template-columns: 1fr; gap: 15px; } ul#cartList li { padding:
			18px 15px; display: flex; flex-direction: column; gap: 6px; background: #fafafa;
			border-radius: 8px; box-shadow: 0 3px 10px rgba(0,0,0,0.05); transition: transform
			0.2s, box-shadow 0.2s, background 0.2s; } ul#cartList li:hover { background:
			#f1f6fc; transform: translateY(-3px); box-shadow: 0 10px 20px rgba(0, 0, 0, 0.12); }
			li .title { font-weight: 600; color: #34495e; font-size: 1.05rem; } li .meta {
			font-size: 0.85rem; color: #7f8c8d; display: flex; flex-wrap: wrap; gap: 8px; } li
			.price { color: #27ae60; font-weight: 700; font-size: 1rem; } h2.total { margin-top:
			25px; text-align: center; color: #e74c3c; } a { display: block; text-align: center;
			margin-top: 25px; color: #3498db; text-decoration: none; font-weight: 600;
			transition: color 0.2s; } a:hover { color: #2980b9; text-decoration: underline; }
			button{;color:#fff;border:none;padding:12px
			0;border-radius:8px;cursor:pointer;font-weight:600;transition:background
			0.2s,transform 0.1s;width:150px;align-self:flex-end;}
			button:hover{;transform:translateY(-1px);}
		</style>
	</head>
	<body>
		<h1>Cart Details</h1>

		{{#if cart}}
			{{#if cart.products.length}}
				<ul id="cartList">
					{{#each cart.products}}
						{{#if product}}
							<li>
								<div class="title">{{product.title}}</div>
								<div class="meta">ID: {{product._id}} | Code: {{product.code}}</div>
								<div class="price">Price: ${{product.price}}</div>
								<div>Quantity: {{quantity}}</div>
								<div>Subtotal: ${{multiply product.price quantity}}</div>

								<div
									style="display: flex; position:relative; justify-content: flex-end; margin-top: 10px;"
								><button style="color: #ffff; background: #ff1212">Delete Product</button></div>
							</li>
						{{else}}
							<li style="display: flex
;
    flex-direction: row;
    align-content: flex-end;
    justify-content: space-between;
    align-items: center;">
								<div>Producto eliminado</div>
								<div
									style="display: flex; position:relative; justify-content: flex-end; margin-top: 10px;"
								><button style="color: #ffff; background: #ff1212; margin-top: 0 !important">Delete</button></div>
							</li>
							</li>
						{{/if}}
					{{/each}}
				</ul>
				<h2 class="total">Total: ${{total}}</h2>
			{{else}}
				<p
					style="text-align:center; font-weight:600; margin-top:20px; font-size:60px"
				>Carrito vac√≠o</p>
			{{/if}}

			<p>Status: <strong>{{cart.status}}</strong></p>

			<p>Created: {{cart.createdAt}}</p>
			<p>Updated: {{cart.updatedAt}}</p>

		{{else}}
			<p>No cart found.</p>
		{{/if}}

		<p><a href="/api/carts">Go Back to Carts</a></p>
	</body>
</html>